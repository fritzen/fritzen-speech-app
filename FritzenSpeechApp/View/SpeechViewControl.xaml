<UserControl x:Class="FritzenSpeechApp.View.SpeechViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FritzenSpeechApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox  FontSize="30px" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Name="TextSpeechEdit" TextChanged="TextSpeechEdit_TextChanged" />
        <TextBlock Visibility="Hidden" FontSize="30px" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"  Name="TextSpeech" />

    </Grid>
</UserControl>
